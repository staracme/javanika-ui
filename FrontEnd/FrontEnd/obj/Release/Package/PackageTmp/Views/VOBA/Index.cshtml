
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/App_Scripts/jquery.validate.js"></script>

<script type="text/javascript">

    $(function () {

        $("#frmRegister").validate({
            rules: {
                txtParentName: {
                    required: true
                },
                txtChildName: {
                    required: true,
                },
                txtParentMobile: {
                    required: true
                },
                txtParentEmail: {
                    required: true,
                    email: true
                },
                txtDOB: {
                    required: true
                },
                chkTerms: {
                    required: true
                }
            },
            messages: {
                txtParentName: {
                    required: "Please enter parent name"
                },
                txtParentMobile: {
                    required: "Please enter mobile number"
                },
                txtParentEmail: {
                    required: "Please enter email id",
                    email: "Please check email id format"
                },
                txtChildName: {
                    required: "Please enter child name",
                },
                txtDOB: {
                    required: "Please enter date of birth"
                },
                chkTerms: {
                    required: "Please accept terms & conditions"
                }
            },
            errorPlacement: function (error, element) {
                if (element.attr("name") == "txtParentName")
                    $('#lblParentName').html(error);

                if (element.attr("name") == "txtParentEmail")
                    $('#lblParentEmail').html(error);

                if (element.attr("name") == "txtParentMobile")
                    $('#lblParentMobile').html(error);


                if (element.attr("name") == "txtChildName")
                    $('#lblChildName').html(error);

                if (element.attr("name") == "txtDOB")
                    $('#lblDOB').html(error);

                if (element.attr("name") == "chkTerms")
                    $('#lblTerms').html(error);
            }
        });
    });


    function Register() {
        if ($("#frmRegister").valid()) {
            $("#btnRegister").hide();
            $("#reg_loader").html("Please wait...");

            $.ajax({
                url: "/VOBA/Register",
                data: $("#frmRegister").serialize(),
                type: "POST",
                success: function (response) {
                    if (response.status == "OK") {
                        location.href = "/VOBASummary?r_id=" + response.r_id;
                    }
                    else if (response.status == "ERROR") {
                        alert("Sorry, Something went wrong.");
                        $("#reg_loader").html("");
                        $("#btnRegister").show();
                    }
                }
            });
        }
    }
</script>
<div class="ContentWrap">
    <div class="MainInnerLabel">Register for VOBA Event</div>
    <form id="frmRegister">
        <div class="InnerFieldsBlock">
            <div class="InnerLabel">Guardian Name</div>
            <div class="InnerTxtWrap"><input type="text" class="InnerTxtBox" id="txtParentName" name="txtParentName" /></div>
            <div class="" id="lblParentName"></div>
            <div class="clr"></div>
        </div>
        <div class="InnerFieldsBlock">
            <div class="InnerLabel">Guardian Email</div>
            <div class="InnerTxtWrap"><input type="text" class="InnerTxtBox" id="txtParentEmail" name="txtParentEmail" /></div>
            <div class="" id="lblParentEmail"></div>
            <div class="clr"></div>
        </div>
        <div class="InnerFieldsBlock">
            <div class="InnerLabel">Guardian Mobile</div>
            <div class="InnerTxtWrap"><input type="text" class="InnerTxtBox" id="txtParentMobile" name="txtParentMobile" /></div>
            <div class="" id="lblParentMobile"></div>
            <div class="clr"></div>
        </div>
        <div class="InnerFieldsBlock">
            <div class="InnerLabel">Child Name</div>
            <div class="InnerTxtWrap"><input type="text" class="InnerTxtBox" id="txtChildName" name="txtChildName" /></div>
            <div class="" id="lblChildName"></div>
            <div class="clr"></div>
        </div>
        <div class="InnerFieldsBlock">
            <div class="InnerLabel">Date Of Birth</div>
            <div class="InnerTxtWrap"><input type="date" class="InnerTxtBox" id="txtDOB" name="txtDOB" min="2005-04-01" /></div>
            <div class="" id="lblDOB"></div>
            <div class="clr"></div>
        </div>
        <div class="InnerFieldsBlock">
            <div class="InnerLabel"></div>
            <div class="InnerTxtWrap"><input type="checkbox" name="chkTerms" id="chkTerms" />I hereby accept terms & conditions&nbsp<a href="/Disclaimer/General Rules for VOBA 2021 Junior.docx">Disclaimer</a></div>
            <div class="" id="lblTerms"></div>
            <div class="clr"></div>
        </div>
        <div class="InnerFieldsBlock">
            <div class="InnerLabel"></div>
            <div class="InnerTxtWrap"><button class="InnerBtnStyle" id="btnRegister" type="button" onclick="JavaScript: Register();">Register</button><span id="reg_loader"></span></div>
            <div class="InnerTxtWrap" id="ErrorMessage"></div>
            <div class="clr"></div>
        </div>
    </form>
</div>